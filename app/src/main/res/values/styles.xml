<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/textAccentColor</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:statusBarColor">@color/backgroundColor</item>
        <item name="colorControlHighlight">@color/rippleColor</item>
        <item name="android:textViewStyle">@style/AppTheme.TextViewStyle</item>
        <item name="android:editTextStyle">@style/AppTheme.TextViewStyle</item>
        <item name="snackbarButtonStyle">@style/AppTheme.SnackbarButtonStyle</item>
    </style>

    <style name="AppTheme.InputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

    <style name="AppTheme.TextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.DialogStyle" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/textAccentColor</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="AppTheme.SnackbarButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/textAccentColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.14</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
